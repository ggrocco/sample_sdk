  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "noLib": false,
    "lib": ["es6", "dom"]
  },
  "exclude": ["dist", "node_modules"],
  "filesGlob": ["./**/*.ts"]
}
